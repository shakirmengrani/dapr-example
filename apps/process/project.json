{
  "root": "apps/process",
  "sourceRoot": "apps/process/src",
  "projectType": "application",
  "targets": {
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx build process",
          "docker build -f ./apps/process/Dockerfile . -t dapr-awesomeprocess"
        ]
      }
    },
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/process",
        "main": "apps/process/src/main.ts",
        "tsConfig": "apps/process/tsconfig.app.json",
        "assets": ["apps/process/src/assets"],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/process/src/environments/environment.ts",
              "with": "apps/process/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:execute",
      "options": {
        "buildTarget": "process:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/process/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/process"],
      "options": {
        "jestConfig": "apps/process/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
